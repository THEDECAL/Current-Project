@{
    var controllerName = this.ViewContext.RouteData.Values["controller"].ToString();
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>@ViewData["Title"] - EasyBilling</title>
    <link rel="stylesheet" href="~/lib/bootstrap-material-design/css/bootstrap-material-design.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <div class="container">
        <partial name="_NavBar" />

        <main role="main" class="position-absolute main-settings">
            @*<div class="card row align-items-center" style="padding: 30px;">*@
            <div class="card p-3 mb-5">
                <a class="btn btn-lg btn-info btn-block" role="button" href="/@controllerName">@ViewData["Title"]</a>
                @RenderBody()
            </div>
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    @*<script src="~/lib/jquery/jquery-3.2.1.slim.min.js"></script>*@
    <script src="~/lib/popper/popper.js"></script>
    <script src="~/lib/bootstrap-material-design/js/bootstrap-material-design.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>$(document).ready(function () { $('body').bootstrapMaterialDesign(); });</script>
    <partial name="_ValidationScriptsPartial"/>
    @*@RenderSection("Scripts", required: false)*@
</body>
</html>
